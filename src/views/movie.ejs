<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/movies.css">
    <title>Movies | Lord of the Rings</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <main>
        <div class="emptyspan">

        </div>


        <div class="hero">

            <div class="linearmain">
                <div class="linear"></div>
                    <h2 class="lineartitle">Movies</h2>
                <div class="linear"></div>
            </div>

            <div class="movies">

            </div>

            <script>
                const readMoreBtns = document.querySelectorAll('.btn2');
                readMoreBtns.forEach(function(btn) {
                  btn.addEventListener('click', function() {
                    const movieInfoDiv = btn.parentElement.querySelector('.movie-info');
                    movieInfoDiv.style.display = movieInfoDiv.style.display === 'none' ? 'block' : 'none';
                    movieInfoDiv.style.color = '#8FECC8';
                    movieInfoDiv.style.marginTop ='60px';
                    movieInfoDiv.style.fontSize = '22px';
                    movieInfoDiv.style.fontStyle = 'italic'
                  });
                });
            </script>

    </main>
    <%- include('partials/footer.ejs') %>
</body>
</html>